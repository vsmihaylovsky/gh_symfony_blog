<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Blog{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#blog-navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">Blog</a>
            </div>
            <div class="navbar-collapse collapse" id="blog-navbar-collapse">
                <div class="navbar-text navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('show_user_articles', {'slug': app.user.slug}) }}" class="navbar-link">{{ app.user.username }}</a>
                        (<a href="{{ path('logout') }}" class="navbar-link">Logout</a>)
                    {% else %}
                        <a href="{{ path('login_route') }}" class="navbar-link">Login</a>
                        /
                        <a href="{{ path('user_registration') }}" class="navbar-link">Registration</a>
                    {% endif %}
                </div>
                {% block navbar %}{% endblock %}
            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
    <div class="row">
        <div class="col-md-12">
            <hr>
            GeekHub, Advanced PHP 2015, Symfony
            <br>
            Blog by Vadim Myhaylovsky
            <hr>
        </div>
    </div>
</div>
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>
</html>
