        <img class="img-responsive center-block" src={{ asset('/images/articles/' ~ article.imageName) | imagine_filter('article_image') }} alt="image">
        <br>
    {% endif %}
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ tinymce_init({
        theme: {'simple':{'height': 500, plugins: ['link code'],}},
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent"})
    }}

    {{ form(form) }}
{% endblock %}